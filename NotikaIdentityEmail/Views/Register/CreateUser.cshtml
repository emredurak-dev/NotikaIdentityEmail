@using NotikaIdentityEmail.Models.IdentityModels
@model RegisterUserViewModel
@{
    Layout = null; // No layout will be used for this page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Identity Registration Form</title>
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!-- Font -->
    <link rel="stylesheet" type="text/css" href="/colorlib-regform-35/css/nunito-font.css">
    <!-- Main Style Css -->
    <link rel="stylesheet" href="/colorlib-regform-35/css/style.css" />
</head>
<body class="form-v9">
    <div class="page-content">
        <div class="form-v9-content" style="background-image: url('/colorlib-regform-35/images/form-v9.jpg')">
            <form class="form-detail" method="post">
                <h2>New User Registration</h2>

                <div class="form-row-total">
                    <div class="form-row">
                        <input type="text" class="input-text" asp-for="Name" placeholder="First Name">
                    </div>
                    <div class="form-row">
                        <input type="text" class="input-text" asp-for="Surname" placeholder="Last Name">
                    </div>
                </div>

                <div class="form-row-total">
                    <div class="form-row">
                        <input type="email" class="input-text" asp-for="Email" placeholder="Email Address">
                    </div>
                    <div class="form-row">
                        <input type="text" class="input-text" asp-for="Username" placeholder="Username">
                    </div>
                </div>

                <div class="form-row-total">
                    <div class="form-row">
                        <input type="password" class="input-text" asp-for="Password" placeholder="Password">
                    </div>
                    <div class="form-row">
                        <input type="password" class="input-text" asp-for="ConfirmPassword" placeholder="Confirm Password">
                    </div>
                </div>

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <div class="form-row-last">
                    <input type="submit" class="register" value="Register">
                </div>
            </form>
        </div>
    </div>
</body>
</html>
