@using Microsoft.AspNetCore.Identity
@model List<Category>
@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/UserLayout/Index.cshtml";
    int count = 0;
}

<div class="form-element-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-element-list">
                    <div class="basic-tb-hd">
                        <h2>Category List</h2>
                    </div>
                    <div class="row">

                        <table class="table table-bordered">
                            <tr>
                                <th>#</th>
                                <th>Category Name</th>
                                <th>Status</th>
                                <th>Delete</th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.CategoryName</td>
                                    <td>@item.CategoryStatus</td>
                                    <td><a href="/Category/DeleteCategory/@item.CategoryId/" class="btn btn-danger">Delete</a></td>
                                    <td><a href="/Category/UpdateCategory/@item.CategoryId/" class="btn btn-info">Update</a></td>
                                </tr>
                            }
                        </table>
                        <a href="/Category/CreateCategory/" class="btn btn-info">Create new category</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

