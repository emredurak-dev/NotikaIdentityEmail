@model Category
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/UserLayout/Index.cshtml";
}

<div class="form-element-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-element-list">
                    <div class="basic-tb-hd">
                        <h2>Category List</h2>
                    </div>
                    <div class="row">
                        <form method="post">
                            <label>Category name</label>
                            <input type="text" asp-for="CategoryName" class="form-control" />
                            <br />

                            <label>Category icon url</label>
                            <input type="text" asp-for="CategoryIconUrl" class="form-control" />
                            <br />
                            <button class="btn btn-primary">Create new category</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

